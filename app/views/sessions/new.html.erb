<div class="row">
	<div class="span4">
	<%= form_for(:session, :url => sessions_path, :html => { :class => 'well' }) do |f| %> 
		<h1>Sign in</h1>
		<div class="field">
			<%= f.label :email %>
			<%= f.text_field :email %> 
		</div>
		<div class="field"> 
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div> 
		<div class="actions">
			<%= f.submit "Sign in", :class => 'btn-primary' %> 
		</div>
		<p>New user? <%= link_to "Sign up now!", signup_path, :class=>"btn btn-primary" %></p>
	<% end %> 
	</div>
	<div class="span8">
		<h3>Invega Product Leaderboard is designed to measure and improve your salesteam's knowledge of Invega Products.</h3>
		<br />
		<p>Sign In to access your quizzes, questions, and see where you rank against your peers.</p>
	</div>
</div>